<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form view -->
    <record model="ir.ui.view" id="generation_card_view_form">
        <field name="name">generation.card.view.form</field>
        <field name="model">generation.card</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- Заголовок картки -->
                    <group>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Card name..."/>
                            </h1>
                        </div>
                        <field name="image_1920"/>
                    </group>

                    <group>
                        <group>
                            <field name="base_language_id"/>
                        </group>
                        <group>
                            <field name="content_type"/>
                            <field name="notes" widget="CopyClipboardChar"/>
                        </group>
                    </group>

                    <!-- Кастомна секція з заголовком -->
                    <span class="o_form_label fw-bold">Initial Content</span>
                    <div class="mb-3">
                        <field name="initial_product_name" invisible="content_type != 'product'"
                               placeholder="Product name..."/>
                        <field name="initial_category_name" invisible="content_type != 'category'"
                               placeholder="Category name..."/>
                        <field name="initial_blog_title" invisible="content_type != 'blog'"
                               placeholder="Blog title..."/>
                        <field name="initial_set_name" invisible="content_type != 'set'" placeholder="Set name..."/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Window action -->
    <record id="action_content_generation" model="ir.actions.act_window">
        <field name="name">Content Generation</field>
        <field name="res_model">generation.card</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first card</p>
        </field>
    </record>
</odoo>