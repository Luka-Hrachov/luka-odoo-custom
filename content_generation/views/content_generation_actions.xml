<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form view -->
    <record model="ir.ui.view" id="generation_card_view_form">
        <field name="name">generation.card.view.form</field>
        <field name="model">generation.card</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <group>
                            <field name="base_language_id"/>
                        </group>
                        <group>
                            <field name="content_type"/>
                            <field name="notes" widget="CopyClipboardChar"/>
                        </group>
                    </group>
                    <group>
                        <field name="initial_product_name" invisable="content_type != 'product'"/>
                        <field name="initial_category_name" invisable="content_type != 'category'"/>
                        <field name="initial_blog_title" invisable="content_type != 'blog'"/>
                        <field name="initial_set_name" invisable="content_type != 'set'"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Window action -->
    <record id="action_content_generation" model="ir.actions.act_window">
        <field name="name">Content Generation</field>
        <field name="res_model">generation.card</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first card</p>
        </field>
    </record>
</odoo>